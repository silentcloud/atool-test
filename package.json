{
  "name": "atool-test",
  "version": "0.5.0-beta1",
  "description": "Unit testing tool based on mocha & sinon & chai",
  "keywords": [
    "testing",
    "istanbul",
    "mocha",
    "react",
    "babel6",
    "sinon",
    "chai"
  ],
  "bin": {
    "atool-test": "./bin/atool-test"
  },
  "files": [
    "bin",
    "lib",
    "package.json",
    "README.md"
  ],
  "author": "rjmuqiang@gmail.com",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ant-tool/atool-test.git"
  },
  "homepage": "https://github.com/ant-tool/atool-test",
  "dependencies": {
    "atool-monitor": "0.x",
    "babel-core": "~6.3.15",
    "babel-preset-es2015": "~6.3.13",
    "babel-preset-react": "~6.3.13",
    "babel-preset-stage-0": "~6.3.13",
    "chai": "~3.5.0",
    "commander": "~2.9.0",
    "istanbul": "^1.0.0-alpha.2",
    "jsdom": "^8.4.1",
    "mocha": "^2.4.5",
    "sinon": "~1.17.3",
    "sinon-chai": "~2.8.0"
  },
  "devDependencies": {
    "babel-cli": "~6.3.15",
    "babel-plugin-add-module-exports": "~0.1.2",
    "coveralls": "^2.11.6",
    "eslint": "^2.2.0",
    "eslint-config-airbnb": "^6.0.2"
  },
  "scripts": {
    "build": "rm -rf lib && babel src --out-dir lib",
    "build-watch": "babel -w src --out-dir lib",
    "lint": "eslint src",
    "prepublish": "npm run build",
    "test": "npm run build && ./bin/atool-test --coverage",
    "coveralls": "cat ./coverage/lcov.info | coveralls"
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "add-module-exports"
    ]
  }
}
